{
    "name"         : "jbzoo/data",
    "type"         : "library",
    "description"  : "An extended version of the ArrayObject object for working with system settings or just for working with data arrays",
    "license"      : "MIT",
    "keywords"     : ["ArrayObject", "Array", "Config", "Data", "ini", "yml", "params", "json"],
    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"      : {
        "php"      : ">=7.2",
        "ext-json" : "*"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev"         : "^3.1.0",
        "jbzoo/utils"               : "^4.4.0",
        "symfony/yaml"              : ">=4.4",

        "symfony/polyfill-ctype"    : ">=1.23.0",
        "symfony/polyfill-mbstring" : ">=1.23.0",
        "symfony/polyfill-php73"    : ">=1.23.0",
        "symfony/polyfill-php80"    : ">=1.23.0",
        "symfony/polyfill-php81"    : ">=1.23.0"
    },

    "suggest"      : {
        "symfony/yaml" : ">=4.4",
        "jbzoo/utils"  : ">=4.2.2"
    },

    "autoload"     : {
        "files" : [
            "src/functions.php"
        ],
        "psr-4" : {
            "JBZoo\\Data\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "config"       : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {
            "composer/package-versions-deprecated" : true
        }
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "4.x-dev"
        }
    }
}
