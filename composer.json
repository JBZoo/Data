{
    "name"              : "jbzoo/data",
    "type"              : "library",
    "description"       : "An extended version of the ArrayObject object for working with system settings or just for working with data arrays",
    "license"           : "MIT",
    "keywords"          : ["ArrayObject", "Array", "Config", "Data", "ini", "yml", "params", "json"],
    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],
    "require"           : {
        "php"      : ">=7.2",
        "ext-json" : "*"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^2.9.2",
        "jbzoo/utils"       : "^4.2.3",
        "symfony/yaml"      : "^5.2.2"
    },

    "suggest"           : {
        "symfony/yaml" : ">=4.4",
        "jbzoo/utils"  : ">=4.2.2"
    },

    "autoload"          : {
        "files" : [
            "src/functions.php"
        ],
        "psr-4" : {
            "JBZoo\\Data\\" : "src"
        }
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "4.x-dev"
        }
    }
}
