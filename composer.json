{
    "name"              : "jbzoo/data",
    "type"              : "library",
    "description"       : "An extended version of the ArrayObject object for working with system settings or just for working with data arrays",
    "license"           : "MIT",

    "keywords"          : [
        "ArrayObject",
        "Array",
        "Config",
        "Data",
        "ini",
        "yml",
        "params",
        "json"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"      : "^8.1",
        "ext-json" : "*"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev"         : "^7.0",
        "jbzoo/utils"               : "^7.1.1",
        "symfony/yaml"              : ">=4.4",

        "symfony/polyfill-ctype"    : ">=1.27.0",
        "symfony/polyfill-mbstring" : ">=1.27.0",
        "symfony/polyfill-php73"    : ">=1.27.0",
        "symfony/polyfill-php80"    : ">=1.27.0",
        "symfony/polyfill-php81"    : ">=1.27.0"
    },

    "suggest"           : {
        "symfony/yaml" : ">=4.4",
        "jbzoo/utils"  : ">=7.0"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\Data\\" : "src"},
        "files" : [
            "src/functions.php"
        ]

    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
